CREATE OR REPLACE FUNCTION return_book(
	reader_id INTEGER,
	book_inv_num INTEGER
)
RETURN VOID AS $$
BEGIN
	UPDATE public.issuance
	SET actual_return_date = NOW()
	WHERE reder_card_number = reader_id AND inventory_number = book_inv_num;

	UPDATE public.book_instance
	SET status = 'in stock'
	WHERE inventory_number = book_inv_num;
END;
$$ LANGUAGE plpgsql;